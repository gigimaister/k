
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff322a2a">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_marginBottom="43.0dp">
        <Button
            android:text="התנתק"
            android:layout_width="99.5dp"
            android:layout_height="50.0dp"
            android:id="@+id/logout"
            android:layout_gravity="top|right" 
             />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/logo"
            android:src="@drawable/hashtil_logo3"
            android:layout_marginTop="26.5dp" />
        <TextView
            android:text="User:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:textSize="35sp"
            android:textColor="#fff8eded" />
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainusernm"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"
            android:textSize="20sp"
            android:textColor="#fffaf0f0"/>
        <Button
            android:text="סריקה"
            android:layout_width="match_parent"
            android:layout_height="82.0dp"
            android:id="@+id/scan"
            android:textSize="25sp"
            android:background="#ff33af28"
            android:layout_marginTop="120dp"
             />

    </LinearLayout>

</RelativeLayout>