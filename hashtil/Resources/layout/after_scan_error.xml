
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1"
    android:background="#ff2a2323" >
    <TextView
        android:text="บางอย่างผิดพลาด. กรุณาสแกนอีกครั้ง!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="100.5dp"
        android:id="@+id/textView1"
        android:textColor="#fff3f0f0"
        android:textSize="35sp" />
    <Button
        android:text="กลับไปที่หน้าสแกน/חזרה"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnbackmain"
        android:layout_marginTop="70dp"
        android:textSize="27sp" />
    <TextView
        android:text="שליחה נכשלה נסה שנית"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="100.5dp"
        android:id="@+id/textView"
        android:textColor="#fff3f0f0"
        android:textSize="35sp"
        android:textAlignment="center"
        android:layout_marginTop="25dp" />
</LinearLayout>