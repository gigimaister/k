
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff322a2a">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="383.5dp"
        android:layout_height="544.0dp"
        android:id="@+id/linearLayout1"
        android:layout_marginBottom="43.0dp">
        <Button
            android:text="back"
            android:layout_width="99.5dp"
            android:layout_height="43.0dp"
            android:id="@+id/back"
            android:layout_gravity="top|right" 
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/logo"
            android:src="@drawable/hashtil_logo3"
            android:layout_marginTop="5dp" />
        <TextView
            android:text="User:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="25sp"
            android:textColor="#fff8eded" />
        <TextView
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usrname"
            android:textSize="20sp"
            android:textColor="#fff7eded"
            android:layout_marginLeft="20dp" />
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/relativeLayout1"
            android:layout_marginBottom="0.0dp"
            android:layout_marginTop="10dp">
            <Button
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnhamamaminus"
                android:layout_marginRight="260dp"
                android:layout_marginLeft="29dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:background="#ffda2121"  />
            <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnhamamamplus"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="260dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:background="#ff33691e" />
            <TextView
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/hamama"
                android:layout_marginLeft="175dp"
                android:layout_marginTop="10dp"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:textSize="26sp"
                android:layout_marginRight="160dp"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2">
            <TextView
                android:text="Gamlon"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="127.0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textStyle="bold"
                android:textColor="#ffebdada"
                android:textSize="20sp"
                android:layout_gravity="center" />
            <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/relativeLayout2"
            android:layout_marginBottom="0.0dp"
            android:layout_marginTop="10dp">
                <Button
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btngamlonminus1"
                    android:layout_marginRight="260dp"
                    android:layout_marginLeft="29dp"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:background="#ffda2121"  />
                <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btngamlonplus1"
                    android:layout_marginRight="20dp"
                android:layout_marginLeft="260dp"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:background="#ff33691e" />
                <TextView
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="173.5dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/gamlon"
                    android:layout_marginLeft="165dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#ffffffff"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginRight="160dp"
                    android:layout_centerHorizontal="true" />

        </RelativeLayout>
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/relativeLayout3"
                android:layout_marginBottom="0.0dp"
                android:layout_marginTop="10dp">
                <Button
                    android:text="-5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn5minus"
                    android:layout_marginRight="260dp"
                    android:layout_marginLeft="29dp"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:background="#ffda2121"  />
                <Button
                    android:text="+5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnplus5"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="260dp"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:background="#ff33691e" />

            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout3"
                app:backgroundTint="#ff000000">
                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar1"
                    android:background="@drawable/progressbarstyle"
                    android:indeterminate="true"
                    android:layout_marginTop="1dp" />
                <Button
                    android:text="Send"
                    android:layout_width="match_parent"
                    android:layout_height="73.5dp"
                    android:id="@+id/btnsend"
                    android:textSize="23sp"
                    android:layout_gravity="fill_horizontal" 
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>