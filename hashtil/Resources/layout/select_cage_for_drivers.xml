<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff2a2323">
    <ImageView
        android:src="@drawable/hashtil_logo3"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/imageView1"
        android:layout_marginTop="15dp" />
    <TextView
        android:text="בחירת כמות כלובים"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:layout_below="@id/imageView1"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:textColor="#ffffffff"
        android:textStyle="bold" />
    <EditText
        android:inputType="numberDecimal"
        android:layout_width="60.0dp"
        android:layout_height="45.5dp"
        android:id="@+id/u_numOfcage"
        android:layout_below="@id/textView1"
        android:layout_centerInParent="true"
        android:layout_marginTop="45dp"
        android:background="#ffffffff"
        android:maxLength="2"
        android:textAlignment="center" />
    



    <Button
        android:text="שלח"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:layout_below="@id/u_numOfcage"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:textSize="25dp"
        android:background="@drawable/costumbutton"
        android:layout_marginTop="50dp" />
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar1"
        android:indeterminate="true" 
        android:layout_below="@id/button1"
        android:layout_marginTop="35dp"/>

</RelativeLayout>