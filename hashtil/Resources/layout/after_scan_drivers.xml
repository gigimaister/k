<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout1"
    android:background="#ff2a2323">
    <ImageView
        android:src="@drawable/hashtil_logo3"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/imageView1"
        android:layout_marginTop="15dp" />
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cx_scan_text"
        android:layout_below="@id/imageView1"
        android:textColor="#ffffffff"
        android:textStyle="bold" />
    

    <ImageButton
        android:src="@drawable/unloading_truck"
        android:layout_width="165dp"
        android:layout_height="135dp"
        android:id="@+id/unloadingtruck"
        android:layout_below="@id/cx_scan_text"
        android:layout_centerInParent="true"
        android:layout_centerVertical="false"
        tools:ignore="UnresolvedResource"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:text="פריקה"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@id/unloadingtruck"
        android:id="@+id/unload_text"
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UnresolvedResource"
        android:layout_centerInParent="true"
        android:textStyle="bold" 
        />
    <ImageButton
        android:src="@drawable/cage_collect_forklift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/unload_text"
        android:id="@+id/loadingtruck"
        android:layout_width="165dp"
        android:layout_height="135dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="50px" 

    />
    <TextView
        android:text="איסוף"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@id/loadingtruck"
        android:id="@+id/collect_cage_text"
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UnresolvedResource"
        android:layout_centerInParent="true"
        android:textStyle="bold" 
        />

</RelativeLayout>